<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@mipmap/pup_tiao_beijing_da"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="请选择您的操作" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@mipmap/pup_tiao_jiange" />

        <Button
            android:id="@+id/pup_jiaohuan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/pop_tiao_beijing"
            android:gravity="center"
            android:text="交换名片，并收藏好友"

            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@mipmap/pup_tiao_jiange" />

        <Button
            android:id="@+id/pup_tinajia"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/pop_tiao_beijing"
            android:gravity="center"
            android:text="添加到通讯录"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@mipmap/pup_tiao_jiange" />

        <Button
            android:id="@+id/pup_fenxang"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/pop_tiao_beijing"
            android:gravity="center"
            android:text="分享该名片"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@mipmap/pup_tiao_jiange" />

        <Button
            android:id="@+id/pup_quxiao"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1"
            android:background="@mipmap/pop_tiao_beijing"
            android:gravity="center"
            android:text="取消"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@mipmap/pup_tiao_jiange" />

</LinearLayout>
</LinearLayout>