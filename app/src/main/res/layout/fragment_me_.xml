<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f7f8"
    android:orientation="vertical"
    tools:context="com.example.yihuii.yihuii.MainFrame.frament4.Me_Fragment">

    <RelativeLayout
        android:id="@+id/ralative_dada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/me_tiao_beijing_da"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/me_me_touxaing"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/me_touxiang"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/me_shangwu" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_weight="1"
              android:paddingRight="10dp"
                android:drawableRight="@mipmap/fanhui_jianjiao"
                android:gravity="center"
                android:text="编辑"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/me_me_title"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/me_me_touxaing"
            android:text="赛电高科"
            android:textColor="#000000"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/relative"
        android:id="@+id/Relative_xinzeng"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#b6b6b6" />

        <TextView
            android:id="@+id/me_me_add_mingpian"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="可以在创建一个名片，可用于不同的场景" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#b6b6b6" />
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/fanhui_jianjiao"
            android:gravity="center"
            android:text="编辑"
           android:paddingRight="10dp"
            android:textSize="12sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/relative"
        android:id="@+id/relative_second"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/me_me_touxaing__"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/me_touxiang"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/me_shangwu" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:drawableRight="@mipmap/fanhui_jianjiao"
                android:gravity="center"
                android:text="编辑"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/me_me_title__"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/me_me_touxaing__"
            android:text="科技技术"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/ralative_dada"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:orientation="vertical">


        <TextView
            android:id="@+id/me_me_huodong"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/me_tiao_beijing"
            android:drawableRight="@mipmap/fanhui_jianjiao"
            android:drawableLeft="@mipmap/me_me"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="22dp"
            android:paddingRight="11dp"
            android:text="我的活动" />


        <TextView
            android:id="@+id/me_me_fabu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/me_tiao_beijing"
            android:drawableLeft="@mipmap/me_fubu"
            android:drawablePadding="15dp"
            android:drawableRight="@mipmap/fanhui_jianjiao"
            android:gravity="center_vertical"
            android:paddingLeft="22dp"
            android:paddingRight="11dp"
            android:text="发布活动" />


        <TextView
            android:id="@+id/me_me_xuqiu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/me_tiao_beijing"
            android:drawableLeft="@mipmap/me_xuqiu"
            android:drawablePadding="15dp"
            android:drawableRight="@mipmap/fanhui_jianjiao"
            android:gravity="center_vertical"
            android:paddingLeft="22dp"
            android:paddingRight="11dp"
            android:text="我的需求" />


        <TextView
            android:id="@+id/me_me_huida"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/me_tiao_beijing"
            android:drawableLeft="@mipmap/me_wenda"
            android:drawablePadding="15dp"
            android:drawableRight="@mipmap/fanhui_jianjiao"
            android:gravity="center_vertical"
            android:paddingLeft="22dp"
            android:paddingRight="11dp"
            android:text="我的问答"

            />




    </LinearLayout>
</RelativeLayout>
