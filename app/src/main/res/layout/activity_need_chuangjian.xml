<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_need_chuangjian"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f7f8"
    android:orientation="vertical"
    tools:context="com.example.yihuii.yihuii.MainFrame.frament4.ziactivity.xuqiu.Need_chuangjian">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@mipmap/banner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="创建需求"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/xuqiu_chuangjian_guanbi"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:drawableLeft="@mipmap/back_jianjiao"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="关闭"
            android:textColor="#ffffff"
            android:textSize="17sp" />
        <!--<TextView-->
        <!--android:textColor="#ffffff"-->
        <!--android:id="@+id/xuqiu_chaungjian"-->
        <!--android:paddingRight="10dp"-->
        <!--android:gravity="fill_vertical"-->
        <!--android:textSize="17sp"-->
        <!--android:text="创建"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_height="match_parent" />-->
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="32dp"
            android:gravity="center"
            android:text="类型 : "
            android:textSize="16sp" />

        <TextView
            android:paddingLeft="5dp"
            android:background="@drawable/edit_backage"
             android:textSize="17sp"
            android:id="@+id/spinner_1"
            android:layout_width="80dp"
            android:paddingRight="5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:drawableRight="@mipmap/novel_nav_content_tips_arrow_normal"
            android:gravity="center_vertical"
            android:text="商务">

        </TextView>


    </RelativeLayout>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/spinner_2"
        android:gravity="center"
        android:text="简介 : "
        android:textColorHint="@color/tan"
        android:textSize="16sp" />

    <EditText

        android:id="@+id/xuqiu_chuanjian_shuru"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/btn_style_pup"
        android:gravity="start"
        android:hint="请输入简介..."
        android:paddingLeft="10dp"
        android:paddingTop="10dp"

        android:textColorHint="#ccc"
        android:textSize="15sp" />

    <Button
        android:id="@+id/xuqiu_chuanjian_fabu"
        android:layout_width="125dp"
        android:layout_height="42dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_fabu_style"
        android:text="发布"
        android:textColor="@color/white"
        android:textSize="17sp" />
</LinearLayout>
