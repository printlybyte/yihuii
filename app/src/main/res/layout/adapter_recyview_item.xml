<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:background="@drawable/activity_shape"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Adapter_recy_title"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="中华人民共和国"
            android:textColor="#000000"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/Adapter_recy_icon"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:src="@mipmap/huodong_kaishi" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/Adapter_recy_icon2"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/huodong_jieshu" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Adapter_recy_icon_touxiang"
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/weijiazai" />

        <LinearLayout
            android:layout_width="2700dp"
            android:layout_height="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:drawableTop="@mipmap/rizhi" />

                <TextView
                    android:id="@+id/Adapter_recy__text_a"
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:text="这是啥"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@mipmap/weizhi" />

                <TextView
                    android:id="@+id/Adapter_recy__text_b"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:text="这是啥"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@mipmap/weicanyu" />

                <TextView
                    android:id="@+id/Adapter_recy__text_c"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:text="这是啥"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>