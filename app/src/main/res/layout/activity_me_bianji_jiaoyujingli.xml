<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_me_bianji_jiaoyujingli"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f1f7f8"
    android:layout_height="match_parent"
    tools:context="com.example.yihuii.yihuii.MainFrame.frament4.me_mingpian_edit.me_bianji_jiaoyujingli">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@mipmap/banner">

        <TextView
            android:id="@+id/gongzuo_fanhui_jiaoyu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/back_jianjiao"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="编辑工作"
            android:textColor="#fff"
            android:textSize="20sp"
            android:id="@+id/textView" />

        <TextView
            android:id="@+id/gongzuo_baocun_jiaoyu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="保存"
            android:textColor="#fff"
            android:textSize="17sp"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:orientation="vertical">

        <EditText
            android:textColorHint="#ccc"
            android:textSize="15sp"
            android:textColor="#000"
            android:background="@null"
            android:id="@+id/gongzuo_gongsi_edit_jiaoyu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="请输入学历"
            android:paddingLeft="13dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <EditText
            android:textSize="15sp"
            android:textColorHint="#ccc"
            android:background="@null"
            android:id="@+id/gongzuo_zhiwei_edit_jiaoyu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="请输入专业"
            android:paddingLeft="13dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="#ccc" />

        <EditText
            android:textColor="#000"
            android:textSize="15sp"
            android:textColorHint="#ccc"
            android:id="@+id/gongzuo_ruxue_time_edit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入入学时间"
            android:paddingLeft="13dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="#ccc" />

    </LinearLayout>
</LinearLayout>
