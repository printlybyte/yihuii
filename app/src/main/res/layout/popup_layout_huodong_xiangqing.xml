<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@mipmap/pup_tiao_beijing_da"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="请选择您的操作" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@mipmap/pup_tiao_jiange" />

        <Button
            android:id="@+id/pup_huodong_jiaohuan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/pop_tiao_beijing"
            android:gravity="center"
            android:text="退出活动"

            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@mipmap/pup_tiao_jiange" />

        <Button
            android:id="@+id/pup_huodong_tinajia"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/pop_tiao_beijing"
            android:gravity="center"
            android:text="分享活动"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@mipmap/pup_tiao_jiange" />

        <Button
            android:id="@+id/pup_huodong_fenxang"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/pop_tiao_beijing"
            android:gravity="center"
            android:text="二维码"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@mipmap/pup_tiao_jiange" />

        <Button
            android:id="@+id/pup_huodong_quxiao"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1"
            android:background="@mipmap/pop_tiao_beijing"
            android:gravity="center"
            android:text="取消"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@mipmap/pup_tiao_jiange" />

    </LinearLayout>
</LinearLayout>