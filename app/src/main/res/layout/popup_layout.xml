<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="3"
        android:background="@mipmap/pup_tiao_beijing_da"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="请选择您的操作" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@mipmap/pup_tiao_jiange" />

        <Button
            android:id="@+id/pop_wid_btn_delele"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/pop_tiao_beijing"
            android:gravity="center"
            android:text="删除活动"
            android:textColor="@color/red"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@mipmap/pup_tiao_jiange" />

        <Button
            android:id="@+id/pop_wid_btn_changeq"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/pop_tiao_beijing"
            android:gravity="center"
            android:text="修改活动"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@mipmap/pup_tiao_jiange" />

        <Button
            android:id="@+id/pop_wid_btn_zhibo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/pop_tiao_beijing"
            android:gravity="center"
            android:text="直播"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@mipmap/pup_tiao_jiange" />

        <Button
            android:id="@+id/pop_wid_btn_qiandao"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1"
            android:background="@mipmap/pop_tiao_beijing"
            android:gravity="center"
            android:text="签到管理"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@mipmap/pup_tiao_jiange" />

        <Button

            android:id="@+id/pop_wid_btn_fenxiang"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1"
            android:background="@mipmap/pop_tiao_beijing"
            android:gravity="center"
            android:text="分享活动"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@mipmap/pup_tiao_jiange" />

        <Button
            android:id="@+id/pop_wid_btn_erweima"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/pop_tiao_beijing"
            android:gravity="center"
            android:text="二维码"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="19dp"
        android:layout_marginTop="19dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/pop_wid_btn_quxiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/pop_tiao_beijing"
            android:gravity="center"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>