<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yihuii.yihuii.MainFrame.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@mipmap/banner">

        <Button
            android:background="@null"
            android:layout_marginTop="7dp"
            android:drawableTop="@mipmap/saoyisao"
            android:layout_marginRight="8dp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:drawableBottom="@mipmap/saoyisao_text"
            android:layout_marginBottom="7dp"
            android:id="@+id/btn_main_scaning"
            android:layout_width="30dp"
            android:layout_height="match_parent"
           />



        <LinearLayout

            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="135dp"
            android:layout_height="26dp">

            <Button
                android:id="@+id/btn_attention"
                android:text="收藏"
                android:textSize="15sp"
                android:background="@drawable/btn_style_left"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_to_attention"
                android:gravity="center"
                android:textSize="15sp"
                android:text="被收藏"
                android:background="@drawable/btn_style_right"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView

            android:id="@+id/text_main_text"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btn_main_setting"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
              android:text="设置"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginRight="7dp"
            />
        <Button
             android:layout_marginLeft="8dp"
            android:id="@+id/btn_main_serch"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/sousuo"
            android:background="@null"
             />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_fraement"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="#f1f7f8"
        android:orientation="vertical">

    </LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:background="@mipmap/yinying"
        android:orientation="horizontal">

        <Button
            android:textSize="14sp"
            android:id="@+id/btn_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="0dp"
            android:drawableTop="@drawable/btn_tab"
            android:paddingTop="10dp"
            android:text="活动" />

        <Button
            android:textSize="14sp"
            android:id="@+id/btn_frient"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="0dp"
            android:drawableTop="@drawable/btn_tab2"
            android:paddingTop="10dp"
            android:text="会友" />

        <Button
            android:textSize="14sp"
            android:id="@+id/btn_find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="0dp"
            android:drawableTop="@drawable/btn_tab3"
            android:paddingTop="10dp"
            android:text="发现" />

        <Button
            android:textSize="14sp"
            android:id="@+id/btn_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="0dp"
            android:drawableTop="@drawable/btn_tab4"
            android:paddingTop="10dp"
            android:text="我" />
    </LinearLayout>
</ScrollView>

</LinearLayout>
