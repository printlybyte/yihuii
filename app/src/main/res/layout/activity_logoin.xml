<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_logoin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/logoin_beijing"
    android:orientation="vertical"
    tools:context="com.example.yihuii.yihuii.logoo.LogoinActivity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_marginTop="67dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/yihui_logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:orientation="vertical">
        <ImageView
             android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:src="@mipmap/yihui_wenzi" />

</LinearLayout>
        <EditText
            android:id="@+id/edit_user"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="53dp"
            android:background="@drawable/btn_style"
            android:drawableLeft="@mipmap/login_account_icon"
            android:drawablePadding="19dp"
            android:hint="请输入账号"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="#ccc"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/edit_pass"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_style"
            android:drawableLeft="@mipmap/login_password_icon"
            android:drawablePadding="19dp"
            android:hint="请输入密码"
            android:paddingLeft="13dp"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="#ccc"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_logoin"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/item_jiange"
            android:text="登录"
            android:textColor="#ffff"
            android:textSize="18sp" />

        <RelativeLayout

            android:id="@+id/linlayout_one"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/button_registT"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:background="@null"
                android:gravity="start"
                android:paddingLeft="36dp"
                android:text="注册"
                android:textColor="#fff"
                android:textSize="15sp" />


            <Button
                android:id="@+id/button_forget"
                android:layout_width="80dp"
                android:layout_height="19dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="36dp"
                android:background="@null"
                android:gravity="center"
                android:text="忘记密码?"
                android:textColor="#fff"
                android:textSize="15sp" />

            <View
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button_forget"
                android:layout_marginRight="42dp"
                android:background="#ccc" />
        </RelativeLayout>


