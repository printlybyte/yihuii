<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_me_shezhi_gongzuo_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f7f8"
    android:orientation="vertical"
    tools:context="com.example.yihuii.yihuii.MainFrame.frament4.me_mingpian_edit.me_shezhi_gongzuo_edit">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@mipmap/banner">

        <TextView
            android:id="@+id/gongzuo_fanhui"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/back_jianjiao"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="编辑工作"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gongzuo_baocun"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="保存"
            android:textColor="#fff"
            android:textSize="17sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:orientation="vertical">

        <EditText
            android:textSize="15sp"
            android:id="@+id/gongzuo_gongsi_edit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="请输入公司名"
            android:background="@null"
            android:textColorHint="#ccc"
            android:paddingLeft="13dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <EditText
            android:id="@+id/gongzuo_zhiwei_edit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColorHint="#ccc"
            android:hint="请输入职位"
            android:textSize="15sp"
            android:background="@null"
            android:paddingLeft="13dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

    </LinearLayout>
</LinearLayout>
